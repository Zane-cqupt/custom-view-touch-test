<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
     tools:context=".MainActivity">

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="蓝色小球"
    android:id="@+id/smallpoint"/>

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="多点触碰"
    android:id="@+id/multouch"
    android:layout_below="@id/smallpoint"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义imagebutton"
        android:id="@+id/imagebutton"
        android:layout_below="@id/multouch"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="slop常量对move事件的影响"
        android:id="@+id/movetouch"
        android:layout_below="@id/imagebutton"/>
    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="事件的反窃取"
    android:id="@+id/interceptouch"
    android:layout_below="@id/movetouch"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="触摸代理"
        android:id="@+id/touchdelegate"
        android:layout_below="@id/interceptouch"/>
</RelativeLayout>
